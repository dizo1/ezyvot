
<h3 align="center">Sign up</h3>

<div class="container">
    <div class="row">
    	<div class="col-md-4 col-md-offset-4">
    		<div class="panel panel-default">
			  	<div class="panel-heading">
			    	<h3 class="panel-title">Register on Site</h3>
			 	</div>
			  	<div class="panel-body">
			  	  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>
			    	<form accept-charset="UTF-8" role="form">
                    <fieldset>
			    	  	<div class="form-group">
                  <%= f.email_field :email, autofocus: true,class:"form-control", placeholder:"yourmail@example.com" %>
			    		    <!--<input class="form-control" placeholder="yourmail@example.com" name="email" type="text">-->
			    		</div>
			    		<div class="form-group">
			    		  <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"Password-6 characters min." %>
			    			<!--<input class="form-control" placeholder="Password" name="password" type="password" value="">-->
			    		</div>
			    		<div class="form-group">
                <%= f.password_field :password_confirmation, autocomplete: "off",class:"form-control", placeholder:"Confirm your password."  %>
              </div>
			    		
			    		<!--<div class="checkbox">
			    	    	<label>
			    	    		<input name="remember" type="checkbox" value="Remember Me"> Remember Me
			    	    	</label>
			    	    </div>-->
			    	    <div>
			    	      <!--<p>Signup</p>
			    	      <p>Forgot your password?</p>-->
			    	    </div>
			    	    <div class="actions">
                  <%= f.submit "Sign Up", class:"btn btn-lg btn-success btn-block" %>
                </div>
          
                <%  end %>
                <%= render "devise/shared/links" %>
			    		<!--<input class="btn btn-lg btn-success btn-block" type="submit" value="Login">-->
			    	</fieldset>
			      	</form>
                      
			    </div>
			</div>
		</div>
	</div>
</div>
