<div class="container">
  <div class="row">
    <ul>
    <li><%= link_to "Add Contestant", new_pageant_contestant_path(@pageant) %></li>
    <li><%= link_to 'Edit', edit_pageant_path(@pageant) %></li> 
    <li><%= link_to 'Back', pageants_path %></li>
  </ul>
  </div>
</div>

<div>
  
  <div class="col s12 m6 l3">
    <!--<h4 class="header">Contestant</h4>-->
    <div class="card horizontal">
      <div class="card-image">
       <%= image_tag( @pageant.image, size: "400x400" ) %>
      </div>
      <div class="card-small">
        <div class="card-content">
          <p>Name : <%= @pageant.name %></p>
          <p>Description   : <%= @pageant.description %></p>
          <p>Category : <%= @pageant.category %></p>
          <p>Start Date   : <%= @pageant.startdate %></p>
          
        </div>
        <div class="card-action">
          <!--<a class="waves-effect indigo darken-4 btn">Vote</a>-->
        </div>
      </div>
    </div>
  </div>
</div>

  <% @contestants.each do |contestant| %>
  <div class="col s12 m6 l3">
    <!--<h4 class="header">Contestant</h4>-->
    <div class="card horizontal">
      <div class="card-image">
       <%= image_tag( contestant.image, size: "120x120") %>
      </div>
      <div class="card-small">
        <div class="card-content">
          <p>Contestant Number : <%= contestant.con_num %></p>
          <p>Contestant Name   : <%= contestant.name%></p>
        </div>
        <div class="card-action">
          <a class="waves-effect indigo darken-4 btn">Vote</a>
        </div>
      </div>
    </div>
  </div>
<%  end %>
</div>

