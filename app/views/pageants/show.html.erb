

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading" style="text-align:center;">
         
            <%  if user_signed_in? && current_user.id == @pageant.user_id %>
            
            <h3 style="text-align:center; color:gray;"><%= @pageant.name %></h3>
            
             <button type="button" class="btn btn-default btn-sm">
              <span class="glyphicon glyphicon-plus-sign "></span> &nbsp; <%= link_to "Add Contestant", new_pageant_contestant_path(@pageant) %>
            </button>
            
             <button type="button" class="btn btn-default btn-sm">
              <span class="glyphicon glyphicon-pencil "></span> &nbsp; <%= link_to 'Edit', edit_pageant_path(@pageant) %>
            </button>
            
            <button type="button" class="btn btn-default btn-sm">
              <span class="glyphicon glyphicon-remove "></span> &nbsp; <%= link_to "Delete", pageant_path(@pageant), method: :delete,
                                 data: { confirm: "Are you sure you want to delete this pageant?"} %>
            </button>
                
              <%  end %>
           
          </div>


  <div class="panel-body">
      <div class="col s12 m6 13">
        <!--<h4 class="header">Contestant</h4>-->
        <div class="col-md-6">
          <div class="card-image" style="padding:5px;">
           <%= image_tag( @pageant.image, size: "600x400", class:'img-responsive' ) %>
          </div>
        </div>
       
          <div class="col-md-6">
          <div class="card-small">
            <div class="card-content" style="color: #90949c; padding:10px; font-size:14px;">
              <h4><p> <i class="fa fa-id-badge"></i> &nbsp;<b>Name:</b> <%= @pageant.name %></h4></p>
              <p> <i class="fa fa-address-card-o" aria-hidden="true"></i> &nbsp;<b>Description:</b> <%= @pageant.description %></p>
              <p> <i class="fa fa-venus-mars" aria-hidden="true"></i> &nbsp;<b>Category:</b> <%= @pageant.category %></p>
              <p> <i class="fa fa-calendar-check-o" aria-hidden="true"></i> &nbsp;<b>Start Date:</b> <%= @pageant.startdate %></p>
              <p> <i class="fa fa-calendar-times-o" aria-hidden="true"></i> &nbsp;<b>End Date:</b> <%= @pageant.enddate %></p>
            
            </div>
            <br/>
            </div>
          </div>
        </div>
