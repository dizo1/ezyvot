<%= form_with(model: pageant, local: true, :html => {class: "form-horizontal", multipart: true, role: "form"}) do |form| %>
  <% if pageant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(pageant.errors.count, "error") %> prohibited this pageant from being saved:</h2>

      <ul>
      <% pageant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :pageant_name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :pageant_description %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.text_field :category, id: :pageant_category %>
  </div>

  <div class="field">
    <%= form.label :startdate %>
    <%= form.datetime_select :startdate, id: :pageant_startdate %>
  </div>

  <div class="field">
    <%= form.label :enddate %>
    <%= form.datetime_select :enddate, id: :pageant_enddate %>
    <%= form.date_select :enddate, class: "datepicker"%>
  </div>

  <div class="field">
    <%= form.label :time_zone %>
    
    <%= form.time_zone_select :time_zone, nil, {}, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>
  </div>

  <div class="actions">
    <%= form.submit class:"waves-effect waves-light btn" %>
  </div>
<% end %>
